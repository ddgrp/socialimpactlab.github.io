---
---

{ "pages": [{% for page in site.pages %} {% if page.title  and page.nosearch != true %}
    { 
        "id": {{ forloop.index }},
        "title": "{{ page.title | strip_html }}",
        "categories": "{{page.categories | join: " "}}",
        "tags": "{{page.tags | join: " "}}",
        {% assign links = page.tags | concat:page.categories %}
        "links": "{% include html/search_links links=links %}",
        "excerpt": "{{page.excerpt | strip_html | strip }}",
        "url": "{{site.baseurl}}{{page.url}}"
    } {% else %} {
        "id": "NaN",
        "title": "",
        "categories": "",
        "tags": "",
        "excerpt": "",
        "url": ""
    }{% endif %}{% if forloop.index < site.pages.size %},{% endif %}
  {% endfor %}],
  "posts": [{% for post in site.posts %}
    { "id": {{ forloop.index | plus: site.pages.size }},
        "title": "{{ post.title | strip_html }}",
        {% assign links = post.tags | concat:post.categories %}
        "links": "{% include html/search_links links=links %}",
        "excerpt": "{{post.excerpt | strip_html | strip }}",
        "url": "{{site.baseurl}}{{post.url}}" }{% if forloop.index < site.posts.size %},{% endif %}{% endfor %}]}