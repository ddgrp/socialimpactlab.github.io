      {% include html/post_metadata post=post %}
      <p class="post-summary">
        {% if post.summary %}
          {% assign summary = post.summary %}
        {% else %}
          {% assign summary = post.excerpt %}
        {% endif %}
        {{ summary | strip_newlines | strip | strip_html | truncate: 320 }}
      </p>
    </div>
  </div>
